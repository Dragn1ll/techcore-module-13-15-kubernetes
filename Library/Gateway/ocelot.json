{
  "Routes": [
    {
      "UpstreamPathTemplate": "/internal/books/{id}",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/api/books/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "book-service",
          "Port": 80
        }
      ],
      "Key": "BookDetails"
    },
    {
      "UpstreamPathTemplate": "/internal/reviews/{id}",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/api/reviews/book/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "books-service",
          "Port": 80
        }
      ],
      "Key": "ReviewDetails"
    },
    {
      "DownstreamPathTemplate": "/api/books",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "book-service",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/books",
      "UpstreamHttpMethod": [ "Delete" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "RouteClaimsRequirement": {
        "Role": "Admin"
      }
    },
    {
      "DownstreamPathTemplate": "/api/books",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "book-service",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/books",
      "UpstreamHttpMethod": [ "Get", "Post", "Put" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    }
  ],
  "Aggregates": [
    {
      "UpstreamPathTemplate": "/details/{id}",
      "UpstreamHttpMethod": [ "Get" ],
      "RouteKeys": [
        "BookDetails",
        "ReviewDetails"
      ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:8080"
  }
}