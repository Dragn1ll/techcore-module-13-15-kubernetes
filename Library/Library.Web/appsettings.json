{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MySettings": {
    "ApplicationName": "Library API",
    "Version": "1.0.0",
    "EnableSwagger": true
  },
  "ConnectionStrings": {
    "DbConnectionString": "User ID=postgres;Password=postgres;Host=postgres;Port=5432;Database=library;Pooling=true;"
  },
  "JwtOptions": {
    "Issuer": "issuer",
    "Audience": "audience",
    "SecretKey": "super_secret_key_which_long_and_secure_which_can_get_from_internet"
  },
  "MassTransit": {
    "RabbitMq": {
      "Host": "rabbitmq",
      "Username": "user",
      "Password": "password"
    }
  },
  "Kafka": {
    "BootstrapServers": "kafka:9092"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Grafana.Loki" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://loki:3100",
          "labels": [
            {
              "key": "app",
              "value": "book-service"
            }
          ],
          "propertiesAsLabels": [ "RequestId", "SourceContext" ]
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  }
}