{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": [
      {
        "RouteId": "BooksCrud",
        "ClusterId": "BookService",
        "Match": {
          "Path": "/api/books",
          "Methods": [ "GET", "POST", "PUT" ]
        }
      },
      {
        "RouteId": "BooksDelete",
        "ClusterId": "BookService",
        "Match": {
          "Path": "/api/books",
          "Methods": [ "DELETE" ]
        }
      },
      {
        "RouteId": "BookInternal",
        "ClusterId": "BookService",
        "Match": {
          "Path": "/internal/books/{id}",
          "Methods": [ "GET" ]
        },
        "Transforms": [
          {
            "PathPattern": "/api/books/{id}"
          }
        ]
      },
      {
        "RouteId": "ReviewInternal",
        "ClusterId": "ReviewService",
        "Match": {
          "Path": "/internal/reviews/{id}",
          "Methods": [
            "GET"
          ],
          "Transforms": [
            {
              "PathPattern": "/api/reviews/book/{id}"
            }
          ]
        }
      }
    ],
    "Clusters": {
      "BookService": {
        "Destinations": {
          "bookService": {
            "Address": "http://book-service:80/"
          }
        }
      }
    },
    "ReviewService": {
      "Destinations": {
        "reviewService": {
          "Address": "http://review-service:80/"
        }
      }
    }
  }
}
